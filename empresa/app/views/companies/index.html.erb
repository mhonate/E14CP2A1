<p id="notice"><%= notice %></p>

<h1>Compañias</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Nombre Compañía</th>
      <th>Número de empleados</th>
      <th>Editar Compañía</th>
      <th>Eliminar Compañía</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.employees.count %></td>
        
        <td> <button type="button" class="btn btn-warning"> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to ' Edit', edit_company_path(company) %></button></td>
        <td> <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <%= link_to 'Eliminar', company, method: :delete, data: { confirm: 'Está seguro de eliminar registro?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-primary"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <%= link_to 'New Company', new_company_path %> </button>
